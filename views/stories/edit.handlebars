<h1>Edit Story</h1>
<div class="row">
    <form action="/stories/{{story.id}}?_method=PUT" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" value="{{story.title}}" required>
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select name="status">
                    {{#select story.status}}
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <p>
                    <label>
                        <input type="checkbox" name="allowComments" class="filled-in" id="allowComments"
                            {{#if story.allowComments}} checked="checked" {{/if}}>
                        <span for="allowComments">Allow Comments</span>
                    </label>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <h3>Tell us your story</h3>
                <textarea name="body" required>{{story.body}}</textarea>
            </div>
        </div>
        <input type="hidden" name="_method" value="PUT">
        <input type="submit" value="Save" class="btn">
    </form>
</div>